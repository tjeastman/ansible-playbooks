<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>hbase.tmp.dir</name>
    <value>{{ hbase_temporary_directory }}</value>
  </property>
  <property>
    <name>hbase.rootdir</name>
    <value>{{ hbase_root_directory }}</value>
  </property>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  <property>
    <name>hbase.zookeeper.property.dataDir</name>
    <value>{{ hbase_zookeeper_directory }}</value>
  </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>hdata1,hdata2,hdata3</value>
  </property>
</configuration>
